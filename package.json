{
  "name": "my-platform",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "api": "yarn workspace api",
    "web": "yarn workspace web",
    "eslint-config": "yarn workspace @internal/eslint-config",
    "tsconfig": "yarn workspace @internal/tsconfig",
    "organize": "npx yarn-deduplicate yarn.lock --strategy highest && npx syncyarnlock -s -k"
  },
  "devDependencies": {
    "@internal/eslint-config": "*",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "turbo": "^1.6.3"
  },
  "engines": {
    "yarn": "^1"
  }
}
