{
  "extends": "@internal/tsconfig/base",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["node_modules", "dist"]
}
